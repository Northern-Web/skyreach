<%- include("../global/header") %>
<%- include("navbar") %>

<div class="container-fluid">
    <script src="/assets/scripts/signup.js"></script>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-4 offset-lg-4 mt-5">
            <h1>Sign up for Skyreach</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-4 offset-lg-4">
            <div class="card">
                <div class="card-body">
                <form class="needs-validation" action="/user/create" method="post" novalidate>
                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-name" 
                            name="name"
                            placeholder="Name"
                            required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="email" 
                            class="form-control" 
                            id="input-email" 
                            name="email"
                            placeholder="E-mail"
                            required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-12 col-lg-6"> 
                            <input 
                            type="password" 
                            class="form-control" 
                            id="input-password" 
                            name="password"
                            placeholder="Password"
                            required>
                        </div>
                    </div>

                    <div class="row">
                        <hr />
                    </div>

                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-streetname-1" 
                            name="streetname1"
                            placeholder="Street name 1">
                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-streetname-2" 
                            name="streetname2"
                            placeholder="Street name 2">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-region" 
                            name="region"
                            placeholder="Region">
                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-zipCode" 
                            name="zipCode"
                            placeholder="Zip Code">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <input 
                            type="text" 
                            class="form-control" 
                            id="input-city" 
                            name="city"
                            placeholder="City">
                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-6">
                            <%- include("../global/components/CountrySelector") %>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="tosOptin" name="tosOptin" onchange="ToggleSigninButton()">
                                <label class="form-check-label" for="tosOptin">
                                    I agree to the <a href="#">terms of service</a>.
                                </label>
                              </div>
                
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="marketingOptin" name="marketingOptin" checked>
                                <label class="form-check-label" for="marketingOptin">
                                    I would like to receive marketing communications.
                                </label>
                              </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <button 
                            type="submit"
                            class="btn btn-primary disabled" 
                            id="btnSignUp">Sign up</button>
                        </div>
                    </div>

                </form>
            </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <a class="text-center" href="/">&#8592; Return home</a>
        </div>
    </div>

</div>



<%- include("../global/footer") %>